<main>
    <div class="hp-display">
        <div class="login-card1">
            <h1 class="page-title text-dark">Sign-up!</h1>
            <h3 class="text-dark">Create an account</h3>
            <form class="form signup-form">
                <div class="form-group">
                <label for="username-signup" class="text-dark">Username:</label>
                <input class="form-input" type="text" id="username-signup" autocomplete="off"/>
                </div>
                <div class="form-group">
                <label for="email-signup" class="text-dark">Email:</label>
                <input class="form-input" type="text" id="email-signup" autocomplete="off"/>
                </div>
                <div class="form-group">
                <label for="password-signup" class="text-dark">Password:</label>
                <input class="form-input" type="password" id="password-signup" autocomplete="off"/>
                </div>
                <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Sign-up</button>
                </div>
            </form>
            <p class="pt-2 logIn">Already have an account? <span> Try <a href="/">logging in.</a></span></p>
        </div>
    </div>
</main>

<script src="./js/signup.js"></script>