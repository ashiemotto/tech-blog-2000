{{!-- create new post button --}}

<div class="newPost">
<button id='idBtn' type="button" class="btn btn-secondary">Create Post</button>
</div>

{{!-- model for post --}}

<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="name-input">{{user.username}}}</label>
          </div>
          <div class="form-group">
            <label for="comment-input">Your message:</label>
            <textarea name="comment" id="comment-input" class="form-control"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

<script src="/public/js/home.js"></script>
<script src="/public/js/createpost.js"></script>
<script src="/public/js/logout.js"></script>